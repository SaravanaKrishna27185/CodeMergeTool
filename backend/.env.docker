# Environment Configuration for Docker
NODE_ENV=production
PORT=1021

# Database
MONGODB_URI=mongodb://mongodb:27017/code-merge-tool
MONGODB_TEST_URI=mongodb://mongodb:27017/code-merge-tool-test

# Redis
REDIS_URL=redis://redis:6379

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=a1b2c3d4e5f6789012345678901234567890abcdef1234567890123456789012
JWT_REFRESH_SECRET=b2c3d4e5f6789012345678901234567890abcdef1234567890123456789012345
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration (CHANGE THIS IN PRODUCTION!)
SESSION_SECRET=c3d4e5f6789012345678901234567890abcdef1234567890123456789012345678

# GitHub Integration (Optional - only if using GitHub OAuth)
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:1021/api/auth/github/callback

# GitLab Integration (Optional - only if using GitLab OAuth)
# GITLAB_CLIENT_ID=your-gitlab-client-id  
# GITLAB_CLIENT_SECRET=your-gitlab-client-secret
GITLAB_CALLBACK_URL=http://localhost:1021/api/auth/gitlab/callback

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
TEMP_PATH=./temp

# Repository
REPOS_PATH=./repositories
MAX_REPO_SIZE=104857600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:1011, http://localhost:1011

# Logging
LOG_LEVEL=info
